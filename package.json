{
  "name": "joi-electron-frontend",
  "private": true,
  "version": "1.0.0",
  "description": "JOI desktop assistant with bundled backend runtime",
  "author": "JOI Team",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "lint": "eslint electron renderer eslint.config.js --report-unused-disable-directives --max-warnings 0",
    "build:backend": "powershell -ExecutionPolicy Bypass -File ..\\joi-backend\\build_backend.ps1 -Clean",
    "dist:dir": "npm run build:backend && set CSC_IDENTITY_AUTO_DISCOVERY=false&&set ELECTRON_BUILDER_CACHE=ebcache&&electron-builder --win dir",
    "dist:win": "npm run build:backend && set CSC_IDENTITY_AUTO_DISCOVERY=false&&set ELECTRON_BUILDER_CACHE=ebcache&&electron-builder --win portable"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "electron": "^35.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.37.0",
    "globals": "^16.4.0"
  },
  "build": {
    "appId": "com.joi.desktop",
    "productName": "JOI Desktop",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "extraResources": [
      {
        "from": "../joi-backend/dist/joi-backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!.env.example"
        ]
      },
      {
        "from": "../joi-backend/dotenv-example",
        "to": "backend/env-template.txt"
      }
    ],
    "win": {
      "icon": "renderer/assets/joi-logo-icon.png",
      "signAndEditExecutable": false,
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
